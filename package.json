{
  "name": "jssoup",
  "private": true,
  "version": "1.0.0",
  "description": "JSSoup is a BeautifulSoup style HTML parser library.",
  "main": "./dist/lib/jssoup.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "test": "node node_modules/jest/bin/jest.js --verbose",
		"test-dev": "node node_modules/jest/bin/jest.js --verbose --watch",
		"test-cov": "node node_modules/jest/bin/jest.js --verbose --coverage --watch",
    "init-dist": "mkdir dist && mkdir dist/lib",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run init-dist",
    "build": "babel ./lib -d ./dist/lib --presets=es2015"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chishui/JSSoup.git"
  },
  "keywords": [
    "html",
    "parser",
    "beautifulsoup",
    "react-native",
    "nodejs"
  ],
  "author": "Liyun Xiu <chishui2@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chishui/JSSoup/issues"
  },
  "homepage": "https://github.com/chishui/JSSoup#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-preset-es2015": "^6.24.1",
    "jest": "^21.2.1"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 29.27,
        "functions": 29.82,
        "lines": 43.97,
        "statements": 44.14
      }
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/mocks/"
    ]
  },
  "dependencies": {
    "htmlparser": "git://github.com/stephenotalora/node-htmlparser.git#v1.7.8"
  }
}
